                  <TableColumn fx:id="colPayMethod" prefWidth="145.5999755859375" text="Pay Method" />
                  <TableColumn fx:id="colTotalAmount" minWidth="2.4000244140625" prefWidth="124.80001831054688" text="Total Amount" />
                  <TableColumn fx:id="colDeposite" prefWidth="131.20001220703125" text="Deposite" />
                  <TableColumn fx:id="colRemainAmount" prefWidth="181.60003662109375" text="Remain Amount" />
               </columns>
               <cursor>
                  <Cursor fx:constant="OPEN_HAND" />
               </cursor>
            </TableView>
         </children>
      </VBox>
   </children>
